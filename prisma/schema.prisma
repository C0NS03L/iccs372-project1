generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Experiments {
  id          BigInt   @id @default(autoincrement())
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Tasks       Task[] // Associated experiment-related tasks
}

model Inventory {
  id                BigInt    @id @default(autoincrement())
  name              String
  description       String
  stockLevel        Int       @default(0) // Current stock level
  lowStockThreshold Int       @default(5) // Threshold for triggering reorder
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  Reorders          Reorder[] // Reorder history
}

model Reorder {
  id            BigInt    @id @default(autoincrement())
  inventoryId   BigInt
  inventoryName String
  quantity      Int // Quantity to reorder
  status        String    @default("PENDING") // Status of reorder (e.g., PENDING, COMPLETED)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  Inventory     Inventory @relation(fields: [inventoryId], references: [id])
}

model Task {
  id            BigInt       @id @default(autoincrement())
  title         String
  description   String
  completed     Boolean      @default(false)
  dueDate       DateTime?
  category      TaskCategory // Type of task (e.g., EXPERIMENT or MAINTENANCE)
  experimentsId BigInt? // Optional link to experiment
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  Experiments   Experiments? @relation(fields: [experimentsId], references: [id])
}

enum TaskCategory {
  EXPERIMENT
  MAINTENANCE
  GENERAL
}
